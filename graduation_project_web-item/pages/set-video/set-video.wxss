page{
  width: 100%;
  height: 100%;
}
.info{
  width: 100%;
  height: 100%;
  background: #222;
  /* background: yellowgreen; */
  padding: 0 20rpx;
  border: 1rpx solid  transparent;
  box-sizing: border-box;
}
.info .addVideo{
 width: 100%;
 height: 500rpx;
 padding-bottom: 30rpx;
 /* background: tomato; */
}
.info .addVideo .myVideo{
 width: 300rpx;
 height: 100%;
 background:rgba(255,255,255,.3);
 margin: 0 auto;
 border: 6rpx dashed gainsboro;
 border-radius: 30rpx;
 box-sizing: border-box;
 position: relative;
 overflow: hidden;
}
.info .addVideo .myVideo image{
  width: 100%;
  height: 100%;
}
.info .addVideo .myVideo text{
  display: block;
  width: 30rpx;
  height: 60%;
  line-height: 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 30rpx;
  color: #eee;
  /* background: skyblue; */
  
}

.info .video-title{
 width: 100%;
 height: 100rpx;
 /* background: skyblue; */
 display: flex;
 align-items: center;
}

.info .video-description{
 width: 100%;
 height: 100rpx;
 /* background: yellow; */
 display: flex;
 align-items: center;
}
.info .video-tag{
 width: 100%;
 height: 100rpx;
 /* background: goldenrod; */
 display: flex;
 align-items: center;
}
.info input{
  width: 100%;
  height: 100%;
  color: #ccc;
}
.lable{
  width: 180rpx;
  font-size: 30rpx;
  color: #eee;
  font-weight: bold;
}
.info form view{
  border-bottom: 1rpx solid #666;
}

.submit{
margin-top: 50rpx;
background: orangered;
color: white;
}

