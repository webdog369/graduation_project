/* components/Dialog.wxss */
page{
  width: 100%;
  height: 100%;
}
.page{
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.6);
  position: absolute;
  left: 0;
  top:0;
  z-index: 999;
}
.page .dialog{
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 0 20rpx #999;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.page .dialog .title{
  width: 100%;
  flex: 4;
  position: relative;
  border-bottom: 1rpx solid #aaa;
  box-sizing: border-box;
}
.page .dialog .title text{
  position: absolute;
  left: 0;
  top:20%;
  display: block;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  /* background: skyblue; */
}

.page .dialog .ok{
  width: 100%;
  flex: 1;
  font-size: 30rpx;
  color: #333;
}