page{
  width: 100%;
  height: 100%;
}
.root{
  width: 100%;
  height: 100%;
  /* background: yellowgreen; */
  position: relative;
}
.floor{
  width: 100%;
  height: 100%;
  background:#333;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 50;
}
.floor text{
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 40rpx;
  color: #ccc;
}
.root swiper{
  width: 100%;
  height: 100%;
  /* background: skyblue; */
}
.root swiper swiper-item{
  position: relative;
}
.root swiper swiper-item video{
 width: 100%;
 height: 100%;
 z-index: 1;
}
.root swiper swiper-item .rightMeun{
  position: absolute;
  width: 100rpx;
  height: 600rpx;
  /* background: red; */
  right: 25rpx;
  bottom: 130rpx;
  z-index: 10;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
}

.root swiper swiper-item .rightMeun>view{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  color:#fff;
  text-align: center;
  /* background: skyblue; */
}
.root swiper swiper-item .rightMeun>view image{
  width: 100%;
  height: 100%;
}
.readComment{
  position: absolute;
  width: 100%;
  height: 60%;
  left: 0;
  bottom: 0;
  background: #fff;
  padding-top: 50rpx;
  padding-bottom: 100rpx;
  border-top: 2px solid #eee;
  box-sizing: border-box;
  z-index: 14;
  transition: height .1s ease-in-out
}
.readCommentClose{
  position: absolute;
  width: 100%;
  height: 0%;
  left: 0;
  bottom: 0;
  z-index: 11;
  opacity: 0;
  transition: height 50ms ease-in-out
}

.comment-item{
  width: 100%;
  border-bottom: 1px solid #eee; 
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 20rpx 0;
}

.comment-item .user{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  /* background: #999; */
  overflow: hidden;
}
.comment-item .user image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.comment-item .user .userData{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 10rpx;
}
.comment-item .user .userData .userName{
  font-size: 35rpx;
  color: #333;
}
.comment-item .user .userData .time{
  font-size: 30rpx;
  color: #aaa;
}

.comment-item .commentBottmo{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* background: yellowgreen; */
  padding-left: 100rpx;
  box-sizing: border-box;
}

.comment-item .commentBottmo .info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background: skyblue; */
}

.comment-item .commentBottmo .info .msg{
  display: block;
  padding: 20rpx 0;
  color: #333;
  font-size: 32rpx;
}

.comment-item .commentBottmo .up {
  height: 100rpx;
  width: 100rpx;
  flex-basis: 150rpx;
  /* background: pink; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
 
 
}
.comment-item .up image{
  width: 65rpx;
  height: 100rpx;
}
.comment-item .commentBottmo .up text {
  width: 100%;
  font-size:30rpx;
  text-align: center;
  color: #666;
}
.say{
  position:absolute;
  width: 95%;
  height: 100rpx;
  left: 50%;
  bottom: 0;
  background:#eee;
  border-radius:50rpx; 
  border: 1px solid #ddd;
  z-index: 15;
  transform: translateX(-50%);
  transition: all .1s linear;
  overflow: hidden;
}
.say-h{
  position:absolute;
  width: 95%;
  height:0%;
  left: 50%;
  bottom: 0;
  background:#eee;
  border-radius:50rpx; 
  border: 1px solid #ddd;
  z-index: 12;
  opacity: 0;
  transform: translateX(-50%);
  transition: all .1s linear;
  overflow: hidden;
}
.say input{
  min-height: 100rpx;
  width: 65%;
  height: 100rpx;
  margin: 0 50rpx;
  color: #333;
}
.say .submit{
  position: absolute;
  right: 10rpx;
  top: 50%;
  width: 180rpx;
  height:80rpx;
  line-height: 50rpx;
  border-radius:50rpx; 
  text-align: center;
  transform: translateY(-50%);
  background: #aaa;
  font-size: 30rpx;
  color: #eee;
}

.videoMsg{
  width: 80%;
  height: 100rpx;
  /* background: skyblue; */
  padding: 10rpx 20rpx;
  position: absolute;
  left: 0;
  bottom: 60rpx;
  z-index: 12;
  color: #fff;
}
.videoMsg .author{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: flex-start;
  /* background: yellowgreen; */
}
.videoMsg .author image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: gray;
}
.videoMsg .author text{
  height: 60rpx;
  line-height: 60rpx;
}
.videoMsg .v_title text{
  display: block;
  margin:10rpx 10rpx 10rpx 120rpx;
  /* background: yellow; */
  font-size: 30rpx;
  width: 100%;
}