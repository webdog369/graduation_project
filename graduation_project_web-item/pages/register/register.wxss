page{
  width: 100%;
  height: 100%;
}

.root{
  width: 100%;
  height: 100%;
  background-size: 100%;
  position: relative;
}

.root .info{
  width: 75%;
  height: 60%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-55%);
  background: rgba(255,255,255,.97);
  box-shadow: 0rpx 0rpx 30rpx #333;
}
.root .info .userImg{
  position: absolute;
  left: 50%;
  top: -75rpx;
  width: 150rpx;
  height: 150rpx;
  background: white;
  border-radius: 50%;
  overflow: hidden;
  transform: translateX(-50%);
  border: 20rpx solid #0061b2;
}
.root .info .userImg image{
  width: 100%;
  height: 100%;
  border: 15rpx solid white;
  box-sizing: border-box;
}

.root .info .userData{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 90%;
  height: 80%;
  /* background: yellowgreen; */
  transform: translate(-50%,-30%)
}
.root .info .userData .userName{
  width: 100%;
  height: 100rpx;
  /* background: orange; */
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx 0;
  padding-right: 15rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  border-radius: 15rpx;
}
.root .info .userData .password{
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-top: 10rxp;
  justify-content: space-around;
  align-items: center;
  border: 2rpx solid #ccc;
  /* background: orange; */
  box-sizing: border-box;
  border-radius: 15rpx;
}

.root .info .userData image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 15rpx;
  /* background: yellow; */
}
.root .info .userData input{
 flex: 1;
 color: #333;
 /* background: red; */
}
.root .info .userData .buttonNo{
  width: 300rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 50rpx;
  background: #f88746;
  color: white;
}
.root .info .userData .buttonYes{
  width: 300rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 50rpx;
  background: #ec5e0a;
  color: white;
}

.root .info .userData .goReg{
  width: 300rpx;
  height: 50rpx;
  /* background: yellowgreen; */
  position: absolute;
  right: 0;
  top: -30rpx;
  text-align: right;
}
.root .info .userData .goReg text{
  font-size: 30rpx;
  color: #999;
}
.root .info .userData .goReg text:nth-child(2){
  color:#f88746;
  text-decoration: underline;
  margin-left: 10rpx;
}
